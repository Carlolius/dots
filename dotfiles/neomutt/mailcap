# MS Word documents
application/msword; ~/.config/neomutt/view-attachment.sh %s "-" '/Applications/LibreOffice.app'
application/vnd.ms-excel; ~/.config/neomutt/view-attachment.sh %s "-" '/Applications/LibreOffice.app'
application/vnd.openxmlformats-officedocument.presentationml.presentation; ~/.config/neomutt/view-attachment.sh %s "-" '/Applications/LibreOffice.app'
application/vnd.oasis.opendocument.text; ~/.config/neomutt/view-attachment.sh %s "-" '/Applications/LibreOffice.app'

# Images
image/jpg; ~/.config/neomutt/view-attachment.sh %s jpg
image/jpeg; ~/.config/neomutt/view-attachment.sh %s jpg
image/pjpeg; ~/.config/neomutt/view-attachment.sh %s jpg
image/png; ~/.config/neomutt/view-attachment.sh %s png
image/gif; ~/.config/neomutt/view-attachment.sh %s gif
video/mp4; ~/.config/neomutt/view-attachment.sh %s mp4
application/pdf; ~/.config/neomutt/view-attachment.sh %s pdf

# HTML
text/html; w3m -I %{charset} -T text/html; copiousoutput;
text/plain; nvim %s

# Unidentified files
application/octet-stream; ~/.config/neomutt/view-attachment.sh %s "-"
