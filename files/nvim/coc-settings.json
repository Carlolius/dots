{
	"markdownlint.config": {
		"default": true,
		"line_length": false
	},


	"languageserver": {
		"bash": {
			"command": "bash-language-server",
			"args": ["start"],
			"filetypes": ["sh"],
			"ignoredRootPaths": ["~"]
		}
	},

	"python.linting.pylintArgs": [

		"--load-plugins=pylint_django",

		"--load-plugins=pylint_django.checkers.migrations",

		"--errors-only" ]
}
