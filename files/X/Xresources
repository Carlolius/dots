! Colors
! special
*.foreground:   #18f018
*.background:   #000000
*.cursorColor:  #18f018

! black
*.color0:       #000000
*.color8:       #686868

! red
*.color1:       #b21818
*.color9:       #ff5454

! green
*.color2:       #18b218
*.color10:      #54ff54

! yellow
*.color3:       #b26818
*.color11:      #ffff04

! blue
*.color4:       #1818b2
*.color12:      #5454ff

! magenta
*.color5:       #b218b2
*.color13:      #ff54ff

! cyan
*.color6:       #18b2b2
*.color14:      #54ffff

! white
*.color7:		#b2b2b2
*.color15:      #ffffff

! Xterm
! Font
xterm*faceName: Hack
xterm*faceSize: 9 
! Clipboard
xterm.vt100.selectToClipboard:true

xterm*vt100.Translations: #override \
        Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
        Ctrl Shift <Key>V: insert-selection(CLIPBOARD) 
! Keybind Fontsize
xterm.vt100.Translations: #override \
	Ctrl <Key> minus: smaller-vt-font() \n\
	Ctrl <Key> plus: larger-vt-font()

! Urxvt
! Extensions
URxvt.perl-ext-common: selection-to-clipboard,default,matcher,resize-font

! No scrollbar
URxvt.scrollBar:false

! Blink cursor
URxvt.cursorBlink:true

! Do not scroll with output
URxvt.scrollTtyOutput: false
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

! Scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt.scrollWithBuffer: true

! Scroll back to the bottom on keypress
URxvt.scrollTtyKeypress: true

! Font
URxvt.font: xft:Hack Nerd Font mono:size=9

! Copy and paste
URxvt.keysym.Control-Shift-V: eval:paste_clipboard
URxvt.keysym.Control-Shift-C: eval:selection_to_clipboard
