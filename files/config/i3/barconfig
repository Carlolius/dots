	volume_delta = 1
	cache_timeout = 5
	format = '[\?if=is_input ğŸ˜®|â™ª] {percentage}%'
	format_muted = '[\?if=is_input ğŸ˜¶|â™ª] muted'
	on_click 3 = "exec i3-sensible-terminal -e pulsemixer"
}

