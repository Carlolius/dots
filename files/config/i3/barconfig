# Config of py3status

# Configuration
general {
	colors = true
	interval = 5
}

# Modules
order += "static_string i3lock"
order += "group uptime"
order += "sysdata"
order += "diskdata"
order += "hddtemp"
order += "wifi"
order += "battery_level"
order += "i3block"
order += "backlight"
order += "volume_status"
order += "time"

# Modules configuration

backlight {
	brightness_delta = 12
	format = 'ï†… {level}%'
}
