	format = '[\?color=used ïƒ‡{used_percent}%]'
}

hddtemp {
	gradients = True
	format_hdd = '[\?color=temperature ï« {temperature}Â°C]'
}

sysdata{
	format = '[ï‹› \?color=cpu_used_percent {cpu_used_percent}%] [ï« \?color=cpu_temp {cpu_temp}{temp_unit}] ï”¸ [\?color=mem_used_percent {mem_used}/{mem_total}{mem_total_unit}] ï¢ [\?color=swap_used_percent {swap_used}/{swap_total}{swap_total_unit}]'
}

static_string i3lock {
	format = "ğŸ”’"
	on_click 1 = "exec i3lock -c 000000 & sleep 5 && pgrep i3lock && xset dpms force off"
}

