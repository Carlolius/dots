	format = "%d/%m/%Y %H:%M"
}

group uptime {
    format = " ï„‰ {output}"
    uptime {
        format = '[\?if=weeks {weeks}w ][\?if=days {days}d ][\?if=hours {hours}h ][\?if=minutes {minutes}m]'
    }
    uptime {
        format = '[\?if=days {days}, ][\?if=hours {hours}:][\?if=minutes {minutes:02d}]'
    }
}

